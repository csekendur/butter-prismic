extends ./layout.pug

block body
  #about.popup
    .popup-about
      each slice in document.data.body
        case slice.slice_type
          when 'image'
            .grid.work-row
              .nine-elevenths.grid__item.push--large--one-eleventh.medium-down--one-whole.work-item
                .popup-image
                  img(src=slice.primary.image.url)
          when 'full-paragraph'
          when 'single-column'
            .grid.text-row
              .two-tenths.grid__item.medium-down--one-whole.push--large--one-twentieth
                h1 #{slice.primary.title[0].text}
              .six-tenths.grid__item.push--large--one-tenth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.items[0].content)}
          when 'two-columns'
            .grid.text-row
              .two-tenths.grid__item.medium-down--one-whole.push--large--one-twentieth
                h1 #{slice.primary.title[0].text}
                p #{slice.primary.description[0].text}
              .three-tenths.grid__item.push--large--one-twentieth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.primary['column-1'])}
              .three-tenths.grid__item.push--large--one-twentieth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.primary['column-2'])}
          when 'three-columns'
            .grid.text-row
              .two-tenths.grid__item.medium-down--one-whole.push--large--one-twentieth
                h1 #{slice.primary.title[0].text}
                p #{slice.primary.description[0].text}
              .two-tenths.grid__item.push--large--one-twentieth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.primary['column-1'])}
              .two-tenths.grid__item.push--large--one-twentieth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.primary['column-2'])}
              .two-tenths.grid__item.push--large--one-twentieth.medium-down--one-whole
                | !{PrismicDOM.RichText.asHtml(slice.primary['column-3'])}
